            <div class="form-group col-md-4">
                <label for="inputState">Kod dili?<span style="color:red">*</span></label>
                <select id="category" name="dil" class="form-control" required>
     <option value="djs">Discord.js</option>
                </select>
            </div>
          
            <div class="form-group col-md-4">
                <label for="inputEmail4">Kod adı<span style="color:red">*</span></label>
